<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FloatingHintEditText">
        <!-- Edit Text -->
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="textGravity">
            <enum name="top" value="0x30" />
            <enum name="bottom" value="0x50" />
            <enum name="left" value="0x03" />
            <enum name="right" value="0x05" />
        </attr>
        <attr name="textSize" format="integer" />
        <attr name="textTypeface" format="string" />
        <attr name="textBackground" format="color|reference" />
        <attr name="isPassword" format="boolean" />

        <!-- Text View -->
        <attr name="floatingHintText" format="string" />
        <attr name="floatingHintTextColor" format="color" />
        <attr name="floatingHintTextStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="floatingHintTextGravity">
            <enum name="top" value="0x30" />
            <enum name="bottom" value="0x50" />
            <enum name="left" value="0x03" />
            <enum name="right" value="0x05" />
        </attr>
        <attr name="floatingHintTextSize" format="integer" />
        <attr name="floatingHintTextTypeface" format="string" />
        <attr name="floatingHintTextBackground" format="color|reference" />
    </declare-styleable>

</resources>